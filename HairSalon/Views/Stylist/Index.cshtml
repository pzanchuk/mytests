
<h1>Our current  STYLISTS:</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
}

@foreach (var stylist in Model)
{
  <h3><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></h3>
}

<form action='/stylists/new' method='get'>
<button type="submit">Add a new stylist</button>
</form>

<form action='/stylists/deleteall' method='post'>
<button type="submit">Delete all stylists</button>
</form>

<form action='/' method='get'>
<button type="submit">Home</button>
</form>
