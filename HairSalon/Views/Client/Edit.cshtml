<h1>Edit client @Model["client"].GetName()</h1>


<form action="/stylists/@Model["stylist"].GetId()/clients/@Model["client"].GetId()/update" method="post">
  <label for="newName">Name:</label>
  <input type="text" name="newName" value="@Model["client"].GetName()">
  <button type="submit">Edit</button>
</form>

<form action='/stylists/@Model["stylist"].GetId()/clients/@Model["client"].GetId()' method='get'>
<button type="submit">Back to details</button>
</form>
